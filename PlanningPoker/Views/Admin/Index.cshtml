@model IEnumerable<PlanningPoker.Services.Model.Session>
    
@{
    ViewBag.Title = "Admin";
}



<div class="row">
    <div class="col-md-12">
        <div class="alert alert-info" role="alert">
            Sessions count: @Model.Count()
        </div>

        <div class="col-md-4 col-md-offset-4">
            <button id="expire" class="btn btn-lg btn-success btn-block">Expire</button>
        </div>
    </div>
</div>

<table class="table">

    <caption>Top 100 sessions</caption>
    <thead>
    <tr>
        <th>ShortId</th>
        <th>Members</th>
        <th>Expires</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var session in Model)
    {
        <tr>
            <td>@session.ShortId</td>
            <td>@session.Members.Count</td>
            <td>@session.ExpireTimeUtc.ToString("dd.MM.yyyy HH:mm:ss") UTC</td>
        </tr>
    }

    </tbody>
</table>

@section scripts{
    <script type="text/javascript">
        
        $(function () {
            $("#expire")
                .click(function () {
                    $.ajax({
                        type: "GET",
                        url: "/admin/expiresessions?auth=rafaltokon",
                        success: function (data) {
                            alert("done!");
                        },
                        error: function () {
                            alert("error");
                        },
                        dataType: "json"
                    });
                });
        });

    </script>
}
