<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Planning Poker</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/mdb.min.css" rel="stylesheet">
    <link href="/Content/Site.css" rel="stylesheet">
    <script type="text/javascript" src="/Scripts/modernizr-2.6.2.js"></script>
    <link rel='shortcut icon' type='image/x-icon' href='/img/icon.ico' />
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">

        <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2"><i class="fa fa-bars"></i></button>

        <div class="container">
            <div class="collapse navbar-toggleable-xs" id="collapseEx2">
                <ul class="nav navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><img src="~/img/icon24.png"/> Planning Poker</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Why", "Home")">Why?</a>
                    </li>

                </ul>
            </div>

        </div>

    </nav>

<div class="container ">
    <div class="body-content">
        @RenderBody()
    </div>
    <hr/>
    <footer>
        <p>&copy; 2016 - @DateTime.Now.Year PlanningPoker</p>
    </footer>
</div>

<script type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script type="text/javascript" src="/Scripts/mdb.min.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>
